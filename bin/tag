#!/bin/sh

source $(til import lib)
TAG=$1
if [[ $TIL_ROOTDIR == $TILHOME ]]; then
   SEARCH_DIR="docs/*"
else
   SEARCH_DIR="."
fi

show_help $1 "til tag - til repository tag locator

USAGE: til tag <tag>

Searches for the specified tag in entries in the til repository, tags are anything
with a + prefix.
"

ack -l $TAG $SEARCH_DIR | cut -d'.' -f1
